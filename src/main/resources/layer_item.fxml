          <font>
            <Font size="24.0" />
          </font>
               <contextMenu>
                  <ContextMenu fx:id="contextMenu">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#removeLayer" text="Delete Layer" />
                        <MenuItem mnemonicParsing="false" text="Rename Layer" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
        </Label>
            <ImageView fx:id="layerTypeIcon" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
